<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Viewbox HorizontalAlignment="Right" VerticalAlignment="Center"
                 Grid.ColumnSpan="4">
            <TextBlock x:Name="dspl" Text="0" FontSize="50" Margin="15"/>
        </Viewbox>
        <Button Content="AC" Grid.Column="0" Grid.Row="1" FontSize="30" Margin="7" Click="AC_Button_Click"/>
        <Button Content="+/-" Grid.Column="1" Grid.Row="1" FontSize="30" Margin="7" Click="minusone_Button_Click"/>
        <Button Content="%" Grid.Column="2" Grid.Row="1" FontSize="30" Margin="10,7,7,7" Click="Operator_Button_Click"/>
        <Button Content="/" Grid.Column="3" Grid.Row="1" FontSize="30" Margin="7" Click="Operator_Button_Click"/>
        <Button Content="*" Grid.Column="3" Grid.Row="2" FontSize="30" Margin="7" Click="Operator_Button_Click"/>
        <Button Content="-" Grid.Column="3" Grid.Row="3" FontSize="30" Margin="7" Click="Operator_Button_Click"/>
        <Button Content="+" Grid.Column="3" Grid.Row="4" FontSize="30" Margin="7" Click="Operator_Button_Click"/>
        <Button Content="=" Grid.Column="3" Grid.Row="5" FontSize="30" Margin="7" Click="Equal_Button_Click"/>
        <Button Content="." Grid.Column="0" Grid.Row="5" FontSize="30" Margin="7" Click="Operator_Button_Click"/>
        <Button Content="0" Grid.Column="1" Grid.Row="5" FontSize="30" Margin="7" Click="Button_Click" Grid.ColumnSpan="2"/>
        <Button Content="1" Grid.Column="0" Grid.Row="4" FontSize="30" Margin="7" Click="Button_Click"/>
        <Button Content="2" Grid.Column="1" Grid.Row="4" FontSize="30" Margin="7" Click="Button_Click"/>
        <Button Content="3" Grid.Column="2" Grid.Row="4" FontSize="30" Margin="7" Click="Button_Click"/>
        <Button Content="4" Grid.Column="0" Grid.Row="3" FontSize="30" Margin="7" Click="Button_Click"/>
        <Button Content="5" Grid.Column="1" Grid.Row="3" FontSize="30" Margin="7" Click="Button_Click"/>
        <Button Content="6" Grid.Column="2" Grid.Row="3" FontSize="30" Margin="7" Click="Button_Click"/>
        <Button Content="7" Grid.Column="0" Grid.Row="2" FontSize="30" Margin="7" Click="Button_Click"/>
        <Button Content="8" Grid.Column="1" Grid.Row="2" FontSize="30" Margin="7" Click="Button_Click"/>
        <Button Content="9" Grid.Column="2" Grid.Row="2" FontSize="30" Margin="7" Click="Button_Click"/>
    </Grid>
</Window>
